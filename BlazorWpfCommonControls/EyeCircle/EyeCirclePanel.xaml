<UserControl x:Class="CustomControls.BlazorWpfCommon.EyeCirclePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:localctrl="clr-namespace:CustomControls"
             SizeChanged="OnSizeChanged">
    <Grid x:Name="InternalGrid" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid x:Name="InternalSelection" Visibility="Hidden" Margin="-5,-5,-5,-5">
            <Path Stretch="Uniform" StrokeThickness="4" Stroke="DarkBlue" StrokeDashArray="2,1" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Path.Data>
                    <GeometryGroup>
                        <EllipseGeometry RadiusX="10" RadiusY="10"/>
                    </GeometryGroup>
                </Path.Data>
            </Path>
        </Grid>
    </Grid>
</UserControl>
